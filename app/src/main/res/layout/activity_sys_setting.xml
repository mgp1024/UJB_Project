<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_titlebar"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="系统设置"
            android:textColor="#666465"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#55000000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="字体大小"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_txtsize"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_button" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="离线设置"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_button" />
            <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#55000000" />
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="推送设置"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_push"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobutton_chose"
            android:button="@null" />
    </RelativeLayout>

     <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="仅Wi-Fi下预览图片"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_wifi"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobutton_chose"
            android:button="@null" />
    </RelativeLayout>

     <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="#55000000" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="清理缓存"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <TextView android:id="@+id/tv_ram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/iv_clear"
            android:layout_centerVertical="true"
            android:text="123"/>
        <ImageView
            android:id="@+id/iv_clear"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_button" />
    </RelativeLayout>

     <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="夜间模式"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_day"
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/radiobutton_chose"
            android:button="@null" />
    </RelativeLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:visibility="gone"
        android:background="#55000000" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="意见反馈"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_ret"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_button" />
    </RelativeLayout>
    
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#55000000" />
   <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textColor="#4b4949"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/setting_button" />
    </RelativeLayout>
   <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#55000000" />
   
   <Button android:id="@+id/btn_exit"
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:layout_marginTop="48dp"
       android:text="退出当前账号"
       android:background="#EA4C87"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:textColor="#FFFFFF"/>

</LinearLayout>